# ==============================================================================
# DOCKER ORCHESTRATION SETTINGS
# ==============================================================================
# The port you want to access the app on from your browser (Host Port)
HOST_PORT=3003

# The name of the container in docker ps
CONTAINER_NAME=whatsapp-prod

# The image name used for building and pulling
WHATSAPP_IMAGE=gedeadisurya/go-whatsapp-multi:kapitmas

# The path to store persistent data (folder on host or named volume)
WHATSAPP_STORAGE_PATH=whatsapp_data

# ==============================================================================
# APPLICATION SETTINGS (Mapped to Go Env)
# ==============================================================================
# Internal port (should match HOST_PORT mapping in compose if not using proxy)
APP_PORT=3003
APP_HOST=0.0.0.0
APP_DEBUG=false
APP_OS=Chrome
# Format: username:password,user2:pass2
APP_BASIC_AUTH=admin:admin
APP_BASE_PATH=
APP_TRUSTED_PROXIES=0.0.0.0/0

# Database Settings
DB_URI="file:storages/whatsapp.db?_foreign_keys=on"
DB_KEYS_URI="file::memory:?cache=shared&_foreign_keys=on"

# WhatsApp Logic Settings
WHATSAPP_AUTO_REPLY="Auto reply message"
WHATSAPP_AUTO_MARK_READ=false
WHATSAPP_AUTO_REJECT_CALL=false
WHATSAPP_AUTO_DOWNLOAD_MEDIA=true
WHATSAPP_WEBHOOK=https://your-webhook-url.com
WHATSAPP_WEBHOOK_SECRET=kapitmas-secret-key
WHATSAPP_WEBHOOK_INSECURE_SKIP_VERIFY=false
WHATSAPP_WEBHOOK_EVENTS=message,message.reaction,message.revoked,message.edited,message.ack,message.deleted,group.participants
WHATSAPP_WEBHOOK_INCLUDE_OUTGOING=false
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_CHAT_STORAGE=true

# Chatwoot Integration (Optional)
CHATWOOT_ENABLED=false
CHATWOOT_URL=https://app.chatwoot.com
CHATWOOT_API_TOKEN=xxxxxxxx
CHATWOOT_ACCOUNT_ID=111111
CHATWOOT_INBOX_ID=000000
CHATWOOT_DEVICE_ID=
CHATWOOT_IMPORT_MESSAGES=false
CHATWOOT_DAYS_LIMIT_IMPORT_MESSAGES=3
